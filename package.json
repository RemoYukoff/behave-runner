{
    "name": "behave-runner",
    "displayName": "Behave Runner",
    "description": "Run, debug, and navigate Behave scenarios with CodeLens, Go to Definition, step autocomplete, and more.",
    "version": "1.8.2",
    "author": "Remo Yukoff <remo.yukoff@gmail.com>",
    "publisher": "remoyukoff",
    "repository": {
        "type": "git",
        "url": "https://github.com/RemoYukoff/behave-runner"
    },
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Testing",
        "Programming Languages"
    ],
    "keywords": [
        "behave",
        "bdd",
        "gherkin",
        "cucumber",
        "feature",
        "python",
        "test"
    ],
    "activationEvents": [
        "workspaceContains:**/*.feature"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "behave",
                "aliases": [
                    "Behave",
                    "feature"
                ],
                "extensions": [
                    ".feature"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "behave",
                "scopeName": "source.behave",
                "path": "./syntaxes/behave.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "command": "behaveRunner.runScenario",
                "title": "Run Behave Scenario"
            },
            {
                "command": "behaveRunner.debugScenario",
                "title": "Debug Behave Scenario"
            }
        ],
        "configuration": {
            "title": "Behave Runner",
            "properties": {
                "behaveRunner.debug.justMyCode": {
                    "type": "boolean",
                    "default": true,
                    "description": "Only debug user code when running Behave in debug mode."
                },
                "behaveRunner.stepDefinitions.patterns": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [
                        "**/steps/**/*.py",
                        "**/*_steps.py",
                        "**/step_*.py",
                        "**/steps.py"
                    ],
                    "description": "Glob patterns for Python files containing step definitions."
                },
                "behaveRunner.featureFiles.patterns": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [
                        "**/*.feature"
                    ],
                    "description": "Glob patterns for Gherkin feature files."
                }
            }
        }
    },
    "scripts": {
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "vscode:prepublish": "npm run compile",
        "lint": "eslint src",
        "lint:fix": "eslint src --fix",
        "dead-code": "knip",
        "duplicates": "jscpd src",
        "analyze": "npm run lint && npm run dead-code && npm run duplicates"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "@types/node": "^20.0.0",
        "@types/vscode": "^1.85.0",
        "eslint": "^9.39.2",
        "jscpd": "^4.0.8",
        "knip": "^5.83.1",
        "typescript": "^5.0.0",
        "typescript-eslint": "^8.55.0"
    },
    "license": "MIT",
    "dependencies": {
        "minimatch": "^9.0.5"
    }
}
