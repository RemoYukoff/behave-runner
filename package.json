{
    "name": "behave-runner",
    "displayName": "Behave Runner",
    "description": "Run Behave scenarios from CodeLens in .feature files.",
    "version": "1.2.0",
    "author": "Remo Yukoff <remo.yukoff@gmail.com>",
    "publisher": "remoyukoff",
    "repository": {
        "type": "git",
        "url": "https://github.com/RemoYukoff/behave-runner"
    },
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Testing"
    ],
    "activationEvents": [
        "workspaceContains:**/*.feature"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "behave",
                "aliases": [
                    "Behave",
                    "feature"
                ],
                "extensions": [
                    ".feature"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "behave",
                "scopeName": "source.behave",
                "path": "./syntaxes/behave.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "command": "behaveRunner.runScenario",
                "title": "Run Behave Scenario"
            },
            {
                "command": "behaveRunner.debugScenario",
                "title": "Debug Behave Scenario"
            }
        ],
        "configuration": {
            "title": "Behave Runner",
            "properties": {
                "behaveRunner.debug.justMyCode": {
                    "type": "boolean",
                    "default": true,
                    "description": "Only debug user code when running Behave in debug mode."
                }
            }
        }
    },
    "scripts": {
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "vscode:prepublish": "npm run compile"
    },
    "devDependencies": {
        "@types/node": "^20.0.0",
        "@types/vscode": "^1.85.0",
        "typescript": "^5.0.0"
    },
    "license": "MIT"
}